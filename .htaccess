# Secure PHP settings
<IfModule mod_php7.c>
    php_flag display_errors off
    php_flag log_errors on
    php_value error_log logs/php-errors.log
    php_flag register_globals off
    php_flag magic_quotes_gpc off
    php_flag allow_url_fopen off
    php_flag allow_url_include off
    php_value session.cookie_httponly 1
    php_value session.use_only_cookies 1
    php_value session.cookie_secure 1
    php_value session.gc_maxlifetime 3600
</IfModule>

# Protect against XSS, clickjacking, etc.
<IfModule mod_headers.c>
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-Content-Type-Options "nosniff"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self'"
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
</IfModule>

# Protect sensitive files
<FilesMatch "^(\.htaccess|\.htpasswd|\.git|\.env|config\.php)">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Protect includes directory
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^includes/ - [F,L]
    RewriteRule ^logs/ - [F,L]
    RewriteRule ^setup/ - [F,L]
</IfModule>

# Force HTTPS
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# Protect complete-application directory from direct access
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Block direct access to complete-application directory listing
    RewriteRule ^complete-application/?$ - [F,L]
    
    # Only allow access to complete-application with valid token parameter
    RewriteCond %{REQUEST_URI} ^/complete-application/?$
    RewriteCond %{QUERY_STRING} !token=
    RewriteRule ^(.*)$ - [F,L]
    
    # Rate limiting for completion attempts (max 5 per minute per IP)
    RewriteMap completion_attempts "txt:/var/www/html/logs/completion_attempts.txt"
    RewriteCond %{REQUEST_URI} ^/complete-application
    RewriteCond %{REMOTE_ADDR} ^(.*)$
    RewriteCond ${completion_attempts:%1|0} >5
    RewriteRule ^(.*)$ - [F,L]
</IfModule>

# Additional security for completion tokens
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Block suspicious token patterns
    RewriteCond %{QUERY_STRING} token=.*[<>\"'&]
    RewriteRule ^complete-application - [F,L]
    
    # Block tokens that are too short (less than 32 chars) or too long (more than 128 chars)
    RewriteCond %{QUERY_STRING} token=.{0,31}$
    RewriteRule ^complete-application - [F,L]
    
    RewriteCond %{QUERY_STRING} token=.{129,}
    RewriteRule ^complete-application - [F,L]
    
    # Block multiple token parameters
    RewriteCond %{QUERY_STRING} token=.*&.*token=
    RewriteRule ^complete-application - [F,L]
</IfModule>

# API Routing - Handle PHP files directly
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Handle Next.js routing for non-PHP files only
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} !\.php$
    RewriteRule ^(.*)$ index.html [L]
</IfModule>

# Prevent directory listing
Options -Indexes

# Set default character set
AddDefaultCharset UTF-8

# Compress text files
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Set browser caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType text/html "access plus 1 day"
</IfModule>

# Security headers specifically for complete-application
<LocationMatch "^/complete-application">
    <IfModule mod_headers.c>
        # Prevent caching of completion pages
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
        
        # Additional security for completion forms
        Header set X-Frame-Options "DENY"
        Header set X-Content-Type-Options "nosniff"
        Header set Referrer-Policy "no-referrer"
    </IfModule>
</LocationMatch>